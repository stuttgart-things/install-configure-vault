{
   "backend":{
      "raft":{
         "path":"/vault/raft",
         "node_id":"node{{ 999 | random }}",
         "retry_join":{
            "leader_tls_servername":"{{ hostvars[groups['leader'][0]]['ansible_hostname'] }}",
            "leader_api_addr":"{{ hostvars[groups['leader'][0]]['ansible_fqdn'] }}",
            "leader_ca_cert_file":"/path/to/ca",
            "leader_client_cert_file":"/etc/certificate/{{ cert_crt_name }}",
            "leader_client_key_file":"/etc/certificate/{{ cert_key_name }}"
         }
      }
   },
   "cluster_addr":"https://{{ vault_raft_cluster_addr }}",
   "api_addr":"https://{{ ansible_fqdn }}",
   "listener":{
      "tcp":{
         "address":"0.0.0.0:8200",
         "tls_disable":0,
         "proxy_protocol_behaviour":"use_always",
         "tls_cert_file":"/etc/certificate/{{ cert_crt_name }}",
         "tls_key_file":"/etc/certificate/{{ cert_key_name }}"
      }
   },
   "ui":true,
   "log_level":"Debug"
}
